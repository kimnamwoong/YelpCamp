<% layout('./layouts/boilerplate') -%>
    <div class="row">
        <div class="col-md-6 offset-md-3 mb-5">
            <h1 class="mb-3">New Campground</h1>
            <div class="card shadow">
                <div class="card-body">
                    <form class="validated-form" action="/campgrounds" method="post" novalidate
                        enctype="multipart/form-data">
                        <div class="mb-3">
                            <label class="form-label" for="title">Title</label>
                            <input class="form-control" type="text" name="campground[title]" id="title" required>
                            <div class="invalid-feedback">
                                Please enter Camp title.
                            </div>
                        </div>
                        <div class="mb-3">
                            <label class="form-label" for="location">Location</label>
                            <input class="form-control" type="text" name="campground[location]" id="location" required>
                            <div class="invalid-feedback">
                                Please enter Camp location.
                            </div>
                        </div>
                        <div class="mb-3">
                            <label class="form-label" for="price">Price</label>
                            <div class="input-group">
                                <span class="input-group-text" id="price-label">$</span>
                                <input type="number" class="form-control" placeholder="0.00" aria-label="price"
                                    aria-describedby="price-label" name="campground[price]" required>
                                <div class="valid-feedback">
                                    Looks good.
                                </div>
                            </div>
                        </div>
                        <div class="mb-3">
                            <label class="form-label" for="description">Description</label>
                            <textarea class="form-control" type="text" name="campground[description]" id="description"
                                required></textarea>
                            <div class="invalid-feedback">
                                Please enter brief camp description.
                            </div>
                        </div>
                        <div class="mb-3 custom-file">
                            <input class="form-control" type="file" id="image" name="campground[img]" multiple>
                            <label for="image" class="form-label custom-file-label">Choose image(s)...</label>
                        </div>
                        <button class="btn btn-primary">Add Campground</button>
                        <a href="/campgrounds" class="btn btn-danger">Cancel</a>
                    </form>
                </div>
            </div>
        </div>
    </div>